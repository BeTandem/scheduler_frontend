nav.navbar.navbar-default.navbar-fixed-top(ng-controller="NavController")
  .container-fluid
    //- Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img(src="/images/betandem-logo.png", alt="Tandem Scheduler")
    //-Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse(ng-controller="NavController")
      ul.nav.navbar-nav.navbar-right(ng-if="isAuthed()")
        li
          p.navbar-text {{username}}
        li
          a(href='/logout') Log Out
